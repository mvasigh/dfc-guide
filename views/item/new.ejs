<%- layout('layout') -%>

  <section class="section">
    <div class="container">
      <form action="/items" method="POST">
        <div class="field is-pulled-right">
          <div class="control">
            <button type="submit" class="button is-dark is-outlined">
              <span class="icon is-small">
                <i class="fas fa-save"></i>
              </span>
              <span>Submit</span>
            </button>
          </div>
        </div>
        <h1 class="title">New item</h1>
        <div class="field">
          <label class="label">Item Title</label>
          <div class="control">
            <input class="input" type="text" placeholder="Item title" name="item[title]">
          </div>
        </div>
        <div class="field">
          <label class="label">Description</label>
          <div class="control">
            <input class="input" type="text" placeholder="Item description" name="item[description]">
          </div>
        </div>

        <div class="columns">
          <div class="column is-4">
            <div class="field">
              <label class="label">Category</label>
              <div class="select">
                <select name="category">
                  <% categories.forEach(category => {  %>
                    <option value="<%= category._id %>">
                      <%= category.name %>
                    </option>
                  <% }) %>
                </select>
              </div>
            </div>
            <div class="field">
              <label class="label">Tags (separated with commas)</label>
              <div class="control">
                <input class="input" type="text" placeholder="Tag 1, Tag 2, Tag 3..." name="item[tags]">
              </div>
            </div>
          </div>
          <div class="column is-8">
            <div class="field">
              <label class="label">Content</label>
              <div class="control">
                <div id="editor"></div>
                <textarea style="display: none" name="item[content]" id="editorOutput"></textarea>
              </div>
            </div>
      </form>
    </div>
  </section>

  <script src="/js/pell.js"></script>
  <script src="/js/editor.js"></script>