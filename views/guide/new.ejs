<%- layout('layout') -%>

  <section class="section">
    <div class="container">
      <h1 class="title">Create a new guide</h1>
      <form action="/guides" method="POST">

        <div class="field">
          <label class="label">Title</label>
          <div class="control">
            <input class="input" type="text" placeholder="Guide Title" name="guide[title]">
          </div>
        </div>

        <div class="field">
          <label class="label">Description</label>
          <div class="control">
            <input class="input" type="text" placeholder="Guide Description" name="guide[description]">
          </div>
        </div>

        <div class="field">
          <label class="label">Topic</label>
          <div class="select">
            <select name="topic">
              <% topics.forEach(topic => { %>
                <option value="<%= topic._id %>"><%= topic.title %></option>
              <% }) %>
            </select>
          </div>
        </div>

        <div class="field">
          <label class="label">Content</label>
          <div class="control">
            <div id="editor"></div>
            <textarea style="display: none" name="guide[content]" id="editorOutput"></textarea>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <button class="button">
              <span class="icon is-small">
                <i class="fas fa-save"></i>
              </span>
              <span>Submit</span>
            </button>
          </div>
        </div>
      </form>
    </div>
  </section>

  <script src="/js/pell.js"></script>
  <script src="/js/editor.js"></script>