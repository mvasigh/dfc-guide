<%- layout('layout') -%>

<section class="section">
  <div class="container">
      <h1 class="title">Add new topic</h1>
      <form action="/topics" method="POST">
        <div class="field">
          <label class="label">Topic Name</label>
          <div class="control">
            <input class="input" type="text" placeholder="Topic Name" name="topic[title]">
          </div>
        </div>
        <div class="field">
          <div class="control">
            <button class="button is-link">Submit</button>
          </div>
        </div>
      </form>
  </div>
</section>